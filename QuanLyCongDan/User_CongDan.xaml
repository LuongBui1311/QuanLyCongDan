                                <Button x:Name="btn_User_TraCuu_TamTru" Grid.Row="2" Style="{StaticResource MaterialDesignFlatButton}" Width="150" Height="35" FontSize="14" FontWeight="SemiBold" materialDesign:RippleAssist.Feedback="Salmon" Click="btn_User_TraCuu_TamTru_Click">
