                                <DatePicker Grid.Row="0" Style="{StaticResource MaterialDesignOutlinedDatePicker}" materialDesign:HintAssist.Hint="Ngày đăng kí" Width="200" HorizontalAlignment="Right" FontSize="12" FontWeight="SemiBold" 
