                                <TextBox Grid.Row="1" Style="{StaticResource MaterialDesignOutlinedTextBox}" materialDesign:HintAssist.Hint="Nơi đăng kí (Bắt buộc)" Width="200" FontSize="12" FontWeight="SemiBold" BorderThickness="1"
