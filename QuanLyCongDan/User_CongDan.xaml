                                    </StackPanel>
                                </Button>
                            </Grid>
                            <WrapPanel x:Name="wrp_User_TamTru" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" Width="720" Visibility="Hidden">
